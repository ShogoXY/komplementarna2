        size_hint: 0.6, 0.2
        font_size :34
        pos_hint: {"x":0.2, "top":0.7}

<Z>
    Label:
        text: "Twoja wartość znajduje się \n w kilku kategoriach\n Podaj ponownie inną wartość"

        size_hint: 0.6, 0.2
        font_size :24
        pos_hint: {"x":0.2, "top":0.7}


<fscreen>
    Label:
	    text: 'Podaj lek z głównej gałęzi'
	    font_size: root.height*0.03
	    size: root.width*0.4, root.height*0.5
	    pos: root.width*0.3, root.height*0.35

	TextInput:
	    id: in_first
	    focus: True
	    text: ''
        multiline:False
        on_text_validate: root.change()
	    font_size: root.height*0.025
	    size: root.width*0.8, root.height*0.07
        pos: root.width*0.1, root.height*0.5

	Button:
        text: 'Sprawdź'
        size: root.width*0.2, root.height*0.1
        pos: root.width*0.75, root.height*0.88
        on_press: root.change()



	Label:
        id: lb
        text: ''
        font_size: root.height*0.05
        size: root.width*0.4, root.height*0.35
        pos: root.width*0.3, root.height*0.5


    Button:
        text: 'EXIT'
        size: root.width*0.2, root.height*0.1
        pos: root.width*0.05, root.height*0.88
        on_press: root.exit()



<secscreen>
    Label:
        text: 'Główny'
        font_size: root.height*0.03
        size: root.width*0.4, root.height*0.55
        pos: root.width*0.03, root.height*0.45
    Label:
        text: 'Komplementarnie'
        font_size: root.height*0.03
        size: root.width*0.4, root.height*0.55
        pos: root.width*0.52, root.height*0.45

    ScrollView:
        size: root.width*0.45, root.height*0.65
        pos: root.width*0.02, root.height*0.002
        Label:
    
            size_hint_y:None
            height:self.texture_size[1]
            id: lb_wynik_glowny
            text: 'Tutaj pojawi się wynik dla komplementarności'
            text_size: self.width, None
            font_size: root.height*0.02

    ScrollView:
        size: root.width*0.46, root.height*0.65
        pos: root.width*0.52, root.height*0.02
        Label:
    
            size_hint_y:None
            height:self.texture_size[1]
            id: lb_komplementarna

            text: 'Tutaj pojawi się wynik dla komplementarności'
            text_size:self.width, None
            font_size: root.height*0.02
    
    Label:
        text: 'Podaj komplementarną'
        font_size: root.height*0.02
        pos: root.width*0.45, root.height*0.84

    TextInput:
        id: ti_komplementarna
        text: ''
        multiline: False
        on_text_validate: root.change_color()
        font_size: root.height*0.02
        size: root.width*0.8, root.height*0.05
        pos: root.width*0.1, root.height*0.77

    Button:
        text: 'Sprawdź'
        size: root.width*0.2, root.height*0.1
        pos: root.width*0.75, root.height*0.88
        on_press: root.change_color()

    Button:
        text: 'Powrót'
        size: root.width*0.2, root.height*0.1
        pos: root.width*0.4, root.height*0.88
        on_press: root.change()
        on_release: root.focus()


    Label:
        id: lb
        text: ''
        font_size: root.height*0.05
        size: root.width*0.4, root.height*0.35
        pos: root.width*0.3, root.height*0.5

    Button:
        text: 'EXIT'
        size: root.width*0.2, root.height*0.1
        pos: root.width*0.05, root.height*0.88
        on_press: root.exit()
